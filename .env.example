# ====================================
# Telegram Bot Configuration
# ====================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_TELEGRAM_ID=your_telegram_user_id_here

# ====================================
# Facebook & Instagram API Configuration
# ====================================
# Get these from: https://developers.facebook.com
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here
FACEBOOK_PAGE_ID=your_facebook_page_id_here
INSTAGRAM_ACCOUNT_ID=your_instagram_business_account_id_here

# ====================================
# WhatsApp Configuration
# ====================================
# Group and Channel IDs (Manual Entry)
WHATSAPP_GROUP_IDS=groupid1@g.us,groupid2@g.us
WHATSAPP_CHANNEL_ID=your_channel_id_here

# ====================================
# Telegram Publishing Configuration
# ====================================
# Channel and Group IDs (Manual Entry)
TELEGRAM_CHANNEL_ID=@your_channel_username
TELEGRAM_GROUP_ID=-100xxxxxxxxxx

# ====================================
# WhatsApp Contact Button Configuration
# ====================================
WHATSAPP_PHONE_NUMBER=+966xxxxxxxxx
WHATSAPP_BUTTON_TEXT=تواصل معنا عبر واتساب

# ====================================
# Auto-Posting Configuration
# ====================================
AUTO_POST_ENABLED=false
AUTO_POST_INTERVAL_MINUTES=60

# ====================================
# Platform Toggles (Enable/Disable Mass Posting)
# ====================================
FACEBOOK_ENABLED=true
INSTAGRAM_ENABLED=true
WHATSAPP_ENABLED=false
TELEGRAM_ENABLED=true

# Note: WhatsApp requires additional system dependencies (Chromium) 
# which may not be available in all environments
